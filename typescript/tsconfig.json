{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    // "rootDir": "./src",
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "dom",
      "es2017",
      "esnext.asynciterable",
      "DOM.Iterable",
      "ScriptHost"
    ],
    "sourceMap": true,
    "removeComments": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  },

  "include": ["src"],
  "exclude": ["node_modules"]
}
